# PMS Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pmsdb
DB_USER=omniusstudio
DB_PASSWORD=your_secure_database_password_here

# PostgreSQL Admin Credentials (for database setup)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_admin_password

# Application Environment
ENVIRONMENT=development

# Security Settings
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# Redis Configuration (for event bus)
REDIS_URL=redis://localhost:6379/0

# AWS Configuration (for ETL pipeline)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Security Headers
TRUSTED_HOSTS=localhost,127.0.0.1

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_PORT=8001

# Integration Services (Mock/Real Toggle)
ENABLE_MOCK_EDI=true
ENABLE_MOCK_PAYMENTS=true
ENABLE_MOCK_VIDEO=true

# External Service Configuration
EDI_SERVICE_URL=http://localhost:8000/mock/edi
STRIPE_API_KEY=sk_test_your_stripe_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
VIDEO_SERVICE_URL=http://localhost:8000/mock/video
VIDEO_API_KEY=your_video_service_api_key_here
