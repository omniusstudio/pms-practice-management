# Kubernetes Environment Configuration
# This file contains environment variables for Kubernetes deployment

# Environment
ENVIRONMENT=kubernetes

# Database Configuration
DATABASE_URL=postgresql://postgres:password@postgres:5432/pms
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
DB_HOST=postgres
DB_PORT=5432
DB_NAME=pms
DB_USER=postgres
DB_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://redis:6379

# Security
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# AWS Configuration (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Logging
LOG_LEVEL=INFO

# CORS Configuration
CORS_ORIGINS=http://pms-frontend:80,http://pms-backend:8000

# Security Headers
SECURE_HEADERS_ENABLED=true

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# Auth0 Configuration
AUTH0_DOMAIN=
AUTH0_CLIENT_ID=
AUTH0_CLIENT_SECRET=
AUTH0_AUDIENCE=

# Application URLs
REDIRECT_URI=http://pms-backend:8000/api/auth/callback
LOGOUT_REDIRECT_URI=http://pms-frontend:80
FRONTEND_URL=http://pms-frontend:80
APP_BASE_URL=http://pms-backend:8000

# Session Configuration
SESSION_SECRET_KEY=your-session-secret-key-change-in-production
SESSION_MAX_AGE=3600

# HIPAA Compliance
HIPAA_COMPLIANCE_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555
ENCRYPTION_AT_REST_ENABLED=true
ENCRYPTION_IN_TRANSIT_ENABLED=true
